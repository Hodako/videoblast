// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  first_name    String
  last_name     String
  email         String    @unique
  password_hash String
  role          String    @default("user")
  created_at    DateTime  @default(now())
  videos        Video[]
  playlists     Playlist[]
  comments      Comment[]
}

model Video {
  id            Int      @id @default(autoincrement())
  title         String   @unique
  description   String?
  duration      String?
  views         String?
  uploaded      DateTime?
  thumbnail_url String?
  video_url     String
  subtitle      String?
  uploader      User     @relation(fields: [uploader_id], references: [id])
  uploader_id   Int
  tags          String[]
  meta_data     Json?
  display_order Int?
  type          String? // straight, gay, or trans
  categories    VideoCategory[]
  playlists     PlaylistVideo[]
  comments      Comment[]
}

model Short {
  id            Int     @id @default(autoincrement())
  title         String  @unique
  video_url     String
  thumbnail_url String?
  views         String?
}

model Image {
  id        Int    @id @default(autoincrement())
  title     String
  image_url String
}

model Playlist {
  id      Int             @id @default(autoincrement())
  name    String
  user    User            @relation(fields: [user_id], references: [id])
  user_id Int
  videos  PlaylistVideo[]
}

model PlaylistVideo {
  playlist    Playlist @relation(fields: [playlist_id], references: [id], onDelete: Cascade)
  playlist_id Int
  video       Video    @relation(fields: [video_id], references: [id], onDelete: Cascade)
  video_id    Int

  @@id([playlist_id, video_id])
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String
  user       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  video      Video    @relation(fields: [video_id], references: [id])
  video_id   Int
  created_at DateTime @default(now())
}

model SiteSetting {
  key   String @id
  value Json
}

model Category {
  id     Int             @id @default(autoincrement())
  name   String          @unique
  videos VideoCategory[]
}

model Creator {
  id          Int     @id @default(autoincrement())
  name        String
  image_url   String?
  description String?
}

model VideoCategory {
  video       Video    @relation(fields: [video_id], references: [id], onDelete: Cascade)
  video_id    Int
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id Int

  @@id([video_id, category_id])
}
