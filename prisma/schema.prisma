
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            Int        @id @default(autoincrement())
  first_name    String
  last_name     String
  email         String     @unique
  password_hash String
  created_at    DateTime   @default(now())
  role          String     @default("user") // 'user' or 'admin'
  videos        Video[]
  playlists     Playlist[]
  comments      Comment[]
  likes         Like[]
}

model Video {
  id            Int             @id @default(autoincrement())
  slug          String          @unique
  title         String
  description   String?
  duration      String?
  views         Int             @default(0)
  uploaded      DateTime        @default(now())
  thumbnail_url String?
  video_url     String
  subtitle      String?
  uploader      User            @relation(fields: [uploader_id], references: [id])
  uploader_id   Int
  tags          String[]
  meta_data     Json?
  display_order Int?
  type          String? // 'straight', 'gay', 'trans'
  creator       Creator?        @relation(fields: [creator_id], references: [id])
  creator_id    Int?
  categories    VideoCategory[]
  playlists     PlaylistVideo[]
  comments      Comment[]
  likes         Like[]
}

model Short {
  id            Int      @id @default(autoincrement())
  title         String   @unique
  video_url     String
  thumbnail_url String?
  views         String?
  creator       Creator? @relation(fields: [creator_id], references: [id])
  creator_id    Int?
}

model Image {
  id        Int    @id @default(autoincrement())
  title     String
  image_url String
}

model Playlist {
  id      Int             @id @default(autoincrement())
  name    String
  user    User            @relation(fields: [user_id], references: [id])
  user_id Int
  videos  PlaylistVideo[]
}

model PlaylistVideo {
  playlist    Playlist @relation(fields: [playlist_id], references: [id], onDelete: Cascade)
  playlist_id Int
  video       Video    @relation(fields: [video_id], references: [id], onDelete: Cascade)
  video_id    Int

  @@id([playlist_id, video_id])
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String
  user       User     @relation(fields: [user_id], references: [id])
  user_id    Int
  video      Video    @relation(fields: [video_id], references: [id], onDelete: Cascade)
  video_id   Int
  created_at DateTime @default(now())
}

model Like {
  user      User     @relation(fields: [user_id], references: [id])
  user_id   Int
  video     Video    @relation(fields: [video_id], references: [id], onDelete: Cascade)
  video_id  Int
  
  @@id([user_id, video_id])
}


model SiteSetting {
  key   String @id
  value Json
}

model Category {
  id     Int             @id @default(autoincrement())
  name   String          @unique
  videos VideoCategory[]
}

model Creator {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  image_url   String?
  description String?
  videos      Video[]
  shorts      Short[]
}

model VideoCategory {
  video      Video    @relation(fields: [video_id], references: [id], onDelete: Cascade)
  video_id   Int
  category   Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  category_id Int

  @@id([video_id, category_id])
}
